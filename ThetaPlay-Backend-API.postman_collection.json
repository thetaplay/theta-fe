        {
            "name": "Get Recommendations - Capture Upside (Moderate)",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Response is successful', function() {",
                            "    pm.response.to.have.status(200);",
                            "});",
                            "",
                            "pm.test('Recommendations are returned', function() {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.success).to.be.true;",
                            "    pm.expect(jsonData.recommendations).to.be.an('array');",
                            "});",
                            "",
                            "pm.test('Each recommendation has signed order', function() {",
                            "    var jsonData = pm.response.json();",
                            "    jsonData.recommendations.forEach(function(rec) {",
                            "        pm.expect(rec).to.have.property('order');",
                            "        pm.expect(rec).to.have.property('signature');",
                            "        pm.expect(rec).to.have.property('nonce');",
                            "    });",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{BASE_URL}}/api/recommendations?goal=CAPTURE_UPSIDE&riskComfort=MODERATE&confidence=HIGH&amount=1000",
                    "host": [
                        "{{BASE_URL}}"
                    ],
                    "path": [
                        "api",
                        "recommendations"
                    ],
                    "query": [
                        {
                            "key": "goal",
                            "value": "CAPTURE_UPSIDE",
                            "description": "PROTECT_ASSET | CAPTURE_UPSIDE | EARN_SAFELY"
                        },
                        {
                            "key": "riskComfort",
                            "value": "MODERATE",
                            "description": "CONSERVATIVE | MODERATE | AGGRESSIVE"
                        },
                        {
                            "key": "confidence",
                            "value": "HIGH",
                            "description": "LOW (30 days) | MID (14 days) | HIGH (7 days)"
                        },
                        {
                            "key": "amount",
                            "value": "1000",
                            "description": "Amount in USDC to invest"
                        }
                    ]
                },
                "description": "Get option recommendations for bullish moderate risk profile"
            },
            "response": []
        },

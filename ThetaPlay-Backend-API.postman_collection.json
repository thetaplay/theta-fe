    "item": [
        {
            "name": "Health Check",
            "event": [
                {
                    "listen": "test",
                    "script": {
                        "exec": [
                            "pm.test('Status is healthy', function() {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.status).to.eql('healthy');",
                            "});",
                            "",
                            "pm.test('Blockchain is connected', function() {",
                            "    var jsonData = pm.response.json();",
                            "    pm.expect(jsonData.blockchain.connected).to.be.true;",
                            "});"
                        ],
                        "type": "text/javascript"
                    }
                }
            ],
            "request": {
                "method": "GET",
                "header": [],
                "url": {
                    "raw": "{{BASE_URL}}/api/health",
                    "host": [
                        "{{BASE_URL}}"
                    ],
                    "path": [
                        "api",
                        "health"
                    ]
                },
                "description": "Health check endpoint to verify backend and blockchain connectivity"
            },
            "response": []
        },
